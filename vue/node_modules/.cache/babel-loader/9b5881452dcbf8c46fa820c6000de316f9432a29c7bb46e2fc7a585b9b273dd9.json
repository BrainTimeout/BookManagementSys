{"ast":null,"code":"import \"core-js/modules/es.array.push.js\";\nimport request from \"@/utils/request\";\nimport Cookies from 'js-cookie';\nexport default {\n  props: [\"id\"],\n  // 从父组件接收书籍 ID\n  data() {\n    return {\n      FileUrl: \"\",\n      // 动态拼接的文件URL前缀\n      book: null,\n      comments: [],\n      // 存储评论列表\n      newComment: \"\",\n      // 新评论内容\n      loading: false,\n      account: \"\",\n      username: \"\",\n      defaultCover: \"https://via.placeholder.com/300x400?text=No+Image\",\n      // 默认图片占位符\n      userDetailDialogVisible: false,\n      // 控制用户详情对话框的显示\n      userDetail: null // 存储用户的详细信息\n    };\n  },\n  methods: {\n    async loadBook() {\n      if (!this.id) {\n        this.$message.error(\"无效的书籍 ID\");\n        this.goBack();\n        return;\n      }\n      this.loading = true;\n      try {\n        const res = await request.get(`/User/${this.id}`);\n        if (res.code === \"200\") {\n          this.book = res.data;\n        } else {\n          this.$message.error(\"加载书籍信息失败\");\n        }\n      } catch {\n        this.$message.error(\"加载书籍信息失败\");\n      } finally {\n        this.loading = false;\n      }\n      try {\n        const res = await request.get(`/User/Comment/${this.book.bookNo}`);\n        if (res.code === \"200\") {\n          this.comments = res.data || [];\n        } else {\n          this.$message.error(\"加载评论失败\");\n        }\n      } catch {\n        this.$message.error(\"加载评论失败\");\n      }\n    },\n    async addComment() {\n      if (!this.newComment.trim()) {\n        this.$message.warning(\"评论内容不能为空\");\n        return;\n      }\n      if (!this.account) {\n        this.$message.warning(\"请先登录\");\n        return;\n      }\n      try {\n        const res = await request.post(`/User/PostComment`, {\n          bookNo: this.book.bookNo,\n          content: this.newComment,\n          username: this.username,\n          account: this.account\n        });\n        if (res.code === \"200\") {\n          this.$message.success(\"评论成功\");\n          this.comments.push({\n            account: this.account,\n            username: this.username,\n            content: this.newComment\n          });\n          this.newComment = \"\";\n        } else {\n          this.$message.error(\"评论失败\");\n        }\n      } catch {\n        this.$message.error(\"评论失败\");\n      }\n    },\n    showUserDetail(account) {\n      this.loading = true;\n      request.get(`/GetAuthInfo/{account}`).then(res => {\n        if (res.code === \"200\") {\n          this.userDetail = res.data;\n          this.userDetailDialogVisible = true; // 显示对话框\n        } else {\n          this.$message.error(\"加载用户详情失败\");\n        }\n      }).finally(() => {\n        this.loading = false;\n      });\n    },\n    resetUserDetail() {\n      this.userDetail = null;\n    },\n    goBack() {\n      this.$router.push({\n        name: \"bookShow\"\n      });\n    }\n  },\n  created() {\n    this.loadBook();\n    this.FileUrl = `${request.defaults.baseURL}/File/`; // 动态设置 FileUrl\n  },\n  mounted() {\n    const AuthInfo = Cookies.get('authInfo');\n    if (AuthInfo) {\n      const authInfo = JSON.parse(AuthInfo); // cookie中存储的是JSON字符串\n      this.account = authInfo.userProfile.account || {};\n      this.username = authInfo.userProfile.username || {};\n    }\n  }\n};","map":{"version":3,"names":["request","Cookies","props","data","FileUrl","book","comments","newComment","loading","account","username","defaultCover","userDetailDialogVisible","userDetail","methods","loadBook","id","$message","error","goBack","res","get","code","bookNo","addComment","trim","warning","post","content","success","push","showUserDetail","then","finally","resetUserDetail","$router","name","created","defaults","baseURL","mounted","AuthInfo","authInfo","JSON","parse","userProfile"],"sources":["src/views/book/Detail.vue"],"sourcesContent":["<template>\r\n  <div class=\"book-detail\">\r\n    <!-- 返回按钮 -->\r\n    <el-button type=\"primary\" @click=\"goBack\" class=\"back-button\">返回书籍列表</el-button>\r\n\r\n    <!-- 加载状态 -->\r\n    <el-loading v-if=\"loading\" class=\"loading-overlay\" fullscreen lock text=\"加载中...\" />\r\n\r\n    <!-- 展示书籍详细信息 -->\r\n    <div v-else-if=\"book\" class=\"book-info\">\r\n      <h1>{{ book.name }}</h1>\r\n      <p><strong>描述:</strong> {{ book.description || \"暂无描述\" }}</p>\r\n      <p><strong>作者:</strong> {{ book.author || \"未知\" }}</p>\r\n      <img :src=\"book.cover || defaultCover\" alt=\"书籍封面\" class=\"book-cover\" />\r\n\r\n      <!-- 评论部分 -->\r\n      <div class=\"comments\">\r\n        <h2 class=\"comments-title\">评论</h2> <!-- 固定标题 -->\r\n        <div v-if=\"comments.length\" class=\"comment-list\">\r\n          <div v-for=\"comment in comments\" :key=\"comment.id\" class=\"comment-item\">\r\n            <!-- 用户头像和评论内容 -->\r\n            <div class=\"comment-header\" @click=\"showUserDetail(comment.account)\" >\r\n              <img\r\n                  :src=\"`${FileUrl}Download/Avatar/${comment.account}.jpg`\"\r\n                  alt=\"用户头像\"\r\n                  class=\"user-avatar\"\r\n              />\r\n              <p><strong>用户 {{ comment.username }}:</strong></p>\r\n            </div>\r\n            <p>{{ comment.content }}</p>\r\n          </div>\r\n        </div>\r\n        <div v-else class=\"no-comments\">暂无评论</div>\r\n\r\n        <!-- 添加评论 -->\r\n        <div class=\"add-comment\">\r\n          <el-input\r\n              type=\"textarea\"\r\n              v-model=\"newComment\"\r\n              placeholder=\"输入你的评论\"\r\n              rows=\"3\"\r\n          ></el-input>\r\n          <el-button\r\n              type=\"primary\"\r\n              @click=\"addComment\"\r\n              :disabled=\"!newComment.trim()\"\r\n          >\r\n            提交评论\r\n          </el-button>\r\n        </div>\r\n      </div>\r\n    </div>\r\n\r\n    <!-- 错误提示 -->\r\n    <div v-else class=\"error-message\">\r\n      <p>书籍信息加载失败或书籍不存在。</p>\r\n      <el-button type=\"warning\" @click=\"goBack\">返回</el-button>\r\n    </div>\r\n\r\n    <!-- 用户详情对话框 -->\r\n    <el-dialog\r\n        :visible.sync=\"userDetailDialogVisible\"\r\n        title=\"用户详细信息\"\r\n        width=\"50%\"\r\n        @close=\"resetUserDetail\">\r\n      <div v-if=\"userDetail\">\r\n        <p><strong>用户名:</strong> {{ userDetail.username }}</p>\r\n        <p><strong>账户:</strong> {{ userDetail.account }}</p>\r\n        <p><strong>简介:</strong> {{ userDetail.introduce || \"暂无简介\" }}</p>\r\n        <p><strong>邮箱:</strong> {{ userDetail.email || \"暂无邮箱\" }}</p>\r\n      </div>\r\n    </el-dialog>\r\n  </div>\r\n</template>\r\n\r\n<script>\r\nimport request from \"@/utils/request\";\r\nimport Cookies from 'js-cookie';\r\n\r\nexport default {\r\n  props: [\"id\"], // 从父组件接收书籍 ID\r\n  data() {\r\n    return {\r\n      FileUrl: \"\", // 动态拼接的文件URL前缀\r\n      book: null,\r\n      comments: [], // 存储评论列表\r\n      newComment: \"\", // 新评论内容\r\n      loading: false,\r\n      account: \"\",\r\n      username: \"\",\r\n      defaultCover: \"https://via.placeholder.com/300x400?text=No+Image\", // 默认图片占位符\r\n      userDetailDialogVisible: false, // 控制用户详情对话框的显示\r\n      userDetail: null, // 存储用户的详细信息\r\n    };\r\n  },\r\n  methods: {\r\n    async loadBook() {\r\n      if (!this.id) {\r\n        this.$message.error(\"无效的书籍 ID\");\r\n        this.goBack();\r\n        return;\r\n      }\r\n      this.loading = true;\r\n      try {\r\n        const res = await request.get(`/User/${this.id}`);\r\n        if (res.code === \"200\") {\r\n          this.book = res.data;\r\n        } else {\r\n          this.$message.error(\"加载书籍信息失败\");\r\n        }\r\n      } catch {\r\n        this.$message.error(\"加载书籍信息失败\");\r\n      } finally {\r\n        this.loading = false;\r\n      }\r\n      try {\r\n        const res = await request.get(`/User/Comment/${this.book.bookNo}`);\r\n        if (res.code === \"200\") {\r\n          this.comments = res.data || [];\r\n        } else {\r\n          this.$message.error(\"加载评论失败\");\r\n        }\r\n      } catch {\r\n        this.$message.error(\"加载评论失败\");\r\n      }\r\n    },\r\n    async addComment() {\r\n      if (!this.newComment.trim()) {\r\n        this.$message.warning(\"评论内容不能为空\");\r\n        return;\r\n      }\r\n      if (!this.account) {\r\n        this.$message.warning(\"请先登录\");\r\n        return;\r\n      }\r\n      try {\r\n        const res = await request.post(`/User/PostComment`, {\r\n          bookNo: this.book.bookNo,\r\n          content: this.newComment,\r\n          username: this.username,\r\n          account: this.account,\r\n        });\r\n        if (res.code === \"200\") {\r\n          this.$message.success(\"评论成功\");\r\n          this.comments.push({\r\n            account: this.account,\r\n            username: this.username,\r\n            content: this.newComment,\r\n          });\r\n          this.newComment = \"\";\r\n        } else {\r\n          this.$message.error(\"评论失败\");\r\n        }\r\n      } catch {\r\n        this.$message.error(\"评论失败\");\r\n      }\r\n    },\r\n    showUserDetail(account) {\r\n      this.loading = true;\r\n      request.get(`/GetAuthInfo/{account}`).then((res) => {\r\n        if (res.code === \"200\") {\r\n          this.userDetail = res.data;\r\n          this.userDetailDialogVisible = true; // 显示对话框\r\n        } else {\r\n          this.$message.error(\"加载用户详情失败\");\r\n        }\r\n      }).finally(() => {\r\n        this.loading = false;\r\n      });\r\n    },\r\n    resetUserDetail() {\r\n      this.userDetail = null;\r\n    },\r\n    goBack() {\r\n      this.$router.push({ name: \"bookShow\" });\r\n    },\r\n  },\r\n  created() {\r\n    this.loadBook();\r\n    this.FileUrl = `${request.defaults.baseURL}/File/`; // 动态设置 FileUrl\r\n  },\r\n  mounted() {\r\n    const AuthInfo = Cookies.get('authInfo');\r\n    if (AuthInfo) {\r\n      const authInfo = JSON.parse(AuthInfo); // cookie中存储的是JSON字符串\r\n      this.account = authInfo.userProfile.account || {};\r\n      this.username = authInfo.userProfile.username || {};\r\n    }\r\n  }\r\n};\r\n</script>\r\n\r\n<style scoped>\r\n.book-detail {\r\n  padding: 20px;\r\n}\r\n.comments {\r\n  margin-top: 30px;\r\n  max-height: 60vh;  /* 限制评论区的最大高度 */\r\n  overflow-y: auto;  /* 使评论区滚动 */\r\n}\r\n.comments-title {\r\n  position: sticky;\r\n  top: 0;\r\n  background-color: #fff;\r\n  padding: 10px;\r\n  font-size: 20px;\r\n  font-weight: bold;\r\n  z-index: 10;\r\n  border-bottom: 1px solid #f0f0f0;\r\n}\r\n.comment-list {\r\n  margin-top: 10px;\r\n  padding-left: 10px;\r\n}\r\n.comment-item {\r\n  margin-bottom: 10px;\r\n  border-bottom: 1px solid #f0f0f0;\r\n  padding-bottom: 5px;\r\n}\r\n.comment-header {\r\n  display: flex;\r\n  align-items: center;\r\n}\r\n.user-avatar {\r\n  width: 40px;\r\n  height: 40px;\r\n  border-radius: 50%;\r\n  margin-right: 10px;\r\n  cursor: pointer; /* 增加指针样式，提示可点击 */\r\n}\r\n.add-comment {\r\n  margin-top: 20px;\r\n  position: sticky;\r\n  bottom: 0;\r\n  background-color: #fff;\r\n  padding: 10px;\r\n  border-top: 1px solid #f0f0f0;\r\n  z-index: 10;\r\n}\r\n.add-comment textarea {\r\n  margin-bottom: 10px;\r\n}\r\n</style>\r\n"],"mappings":";AA4EA,OAAAA,OAAA;AACA,OAAAC,OAAA;AAEA;EACAC,KAAA;EAAA;EACAC,KAAA;IACA;MACAC,OAAA;MAAA;MACAC,IAAA;MACAC,QAAA;MAAA;MACAC,UAAA;MAAA;MACAC,OAAA;MACAC,OAAA;MACAC,QAAA;MACAC,YAAA;MAAA;MACAC,uBAAA;MAAA;MACAC,UAAA;IACA;EACA;EACAC,OAAA;IACA,MAAAC,SAAA;MACA,UAAAC,EAAA;QACA,KAAAC,QAAA,CAAAC,KAAA;QACA,KAAAC,MAAA;QACA;MACA;MACA,KAAAX,OAAA;MACA;QACA,MAAAY,GAAA,SAAApB,OAAA,CAAAqB,GAAA,eAAAL,EAAA;QACA,IAAAI,GAAA,CAAAE,IAAA;UACA,KAAAjB,IAAA,GAAAe,GAAA,CAAAjB,IAAA;QACA;UACA,KAAAc,QAAA,CAAAC,KAAA;QACA;MACA;QACA,KAAAD,QAAA,CAAAC,KAAA;MACA;QACA,KAAAV,OAAA;MACA;MACA;QACA,MAAAY,GAAA,SAAApB,OAAA,CAAAqB,GAAA,uBAAAhB,IAAA,CAAAkB,MAAA;QACA,IAAAH,GAAA,CAAAE,IAAA;UACA,KAAAhB,QAAA,GAAAc,GAAA,CAAAjB,IAAA;QACA;UACA,KAAAc,QAAA,CAAAC,KAAA;QACA;MACA;QACA,KAAAD,QAAA,CAAAC,KAAA;MACA;IACA;IACA,MAAAM,WAAA;MACA,UAAAjB,UAAA,CAAAkB,IAAA;QACA,KAAAR,QAAA,CAAAS,OAA